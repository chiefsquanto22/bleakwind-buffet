<UserControl x:Class="PointOfSale.CandlehearthCoffeeCustom"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <StackPanel>
            <CheckBox Content="Ice" IsChecked="False"/>
            <CheckBox Content="Room for Cream" IsChecked="False"/>
            <CheckBox Content="Decaf" IsChecked="False"/>
            <ComboBox Width="100" HorizontalAlignment="Left">
                <ComboBoxItem Content="Small"/>
                <ComboBoxItem Content="Medium"/>
                <ComboBoxItem Content="Large"/>
            </ComboBox>
        </StackPanel>
    </Grid>
</UserControl>
