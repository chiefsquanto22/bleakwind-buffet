<UserControl x:Class="PointOfSale.SailorSodaCustom"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <StackPanel>
            <ComboBox  Width="100" HorizontalAlignment="Left" SelectedItem="{Binding Path=Size}">
                <ComboBoxItem Content="Small"/>
                <ComboBoxItem Content="Medium"/>
                <ComboBoxItem Content="Large"/>
            </ComboBox>
            <ComboBox  Width="100" HorizontalAlignment="Left" SelectedItem="{Binding Path=Flavor}">
                <ComboBoxItem Content="Blackberry"/>
                <ComboBoxItem Content="Cherry"/>
                <ComboBoxItem Content="Grapefruit"/>
                <ComboBoxItem Content="Lemon"/>
                <ComboBoxItem Content="Peach"/>
                <ComboBoxItem Content="Watermelon"/>
            </ComboBox>
        </StackPanel>
    </Grid>
    
</UserControl>
