<UserControl x:Class="PointOfSale.SailorSodaCustom"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <StackPanel>
            <RadioButton Content="Small" IsChecked="{Binding Path=Size}"/>
            <RadioButton Content="Medium" IsChecked="{Binding Path=Size}"/>
            <RadioButton Content="Large" IsChecked="{Binding Path=Size}"/>
        </StackPanel>
        <StackPanel Margin="0,55,0,0">
            <RadioButton Content="Blackberry"   IsChecked="{Binding Path=Flavor}"/>
            <RadioButton Content="Cherry"       IsChecked="{Binding Path=Flavor}"/>
            <RadioButton Content="Grapefruit"   IsChecked="{Binding Path=Flavor}"/>
            <RadioButton Content="Lemon"        IsChecked="{Binding Path=Flavor}"/>
            <RadioButton Content="Peach"        IsChecked="{Binding Path=Flavor}"/>
            <RadioButton Content="Watermelon"   IsChecked="{Binding Path=Flavor}"/>
        </StackPanel>
    </Grid>

</UserControl>
