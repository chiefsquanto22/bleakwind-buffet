<UserControl x:Class="PointOfSale.ThalmorTripleCustom"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <StackPanel>
            <CheckBox Content="Bun" IsChecked="True"/>
            <CheckBox Content="Ketchup" IsChecked="True"/>
            <CheckBox Content="Mustard" IsChecked="True"/>
            <CheckBox Content="Pickle" IsChecked="True"/>
            <CheckBox Content="Cheese" IsChecked="True"/>
            <CheckBox Content="Tomato" IsChecked="True"/>
            <CheckBox Content="Lettuce" IsChecked="True"/>
            <CheckBox Content="Mayo" IsChecked="True"/>
            <CheckBox Content="Bacon" IsChecked="True"/>
            <CheckBox Content="Egg" IsChecked="True"/>
        </StackPanel>
        <Button x:Name="Done" Content="Done" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
