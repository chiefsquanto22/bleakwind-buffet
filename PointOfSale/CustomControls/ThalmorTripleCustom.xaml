<UserControl x:Class="PointOfSale.ThalmorTripleCustom"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <StackPanel>
            <CheckBox Content="Bun"     IsChecked="{Binding Path=Bun}"/>
            <CheckBox Content="Ketchup" IsChecked="{Binding Path=Ketchup}"/>
            <CheckBox Content="Mustard" IsChecked="{Binding Path=Mustard}"/>
            <CheckBox Content="Pickle"  IsChecked="{Binding Path=Pickle}"/>
            <CheckBox Content="Cheese"  IsChecked="{Binding Path=Cheese}"/>
            <CheckBox Content="Tomato"  IsChecked="{Binding Path=Tomato}"/>
            <CheckBox Content="Lettuce" IsChecked="{Binding Path=Lettuce}"/>
            <CheckBox Content="Mayo"    IsChecked="{Binding Path=Mayo}"/>
            <CheckBox Content="Bacon"   IsChecked="{Binding Path=Bacon}"/>
            <CheckBox Content="Egg"     IsChecked="{Binding Path=Egg}"/>
        </StackPanel>
    </Grid>
</UserControl>
