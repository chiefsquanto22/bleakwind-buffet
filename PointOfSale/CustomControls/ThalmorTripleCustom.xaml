<UserControl x:Class="PointOfSale.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <CheckBox Content="Bun" IsChecked="True" Margin="0,0,0,0"/>
        <CheckBox Content="Ketchup" IsChecked="True" Margin="0,20,0,0"/>
        <CheckBox Content="Mustard" IsChecked="True" Margin="0,40,0,0"/>
        <CheckBox Content="Pickle" IsChecked="True" Margin="0,60,0,0"/>
        <CheckBox Content="Cheese" IsChecked="True" Margin="0,80,0,0"/>
        <CheckBox Content="Tomato" IsChecked="True" Margin="0,100,0,0"/>
        <CheckBox Content="Lettuce" IsChecked="True" Margin="0,120,0,0"/>
        <CheckBox Content="Mayo" IsChecked="True" Margin="0,140,0,0"/>
        <CheckBox Content="Bacon" IsChecked="True" Margin="0,160,0,0"/>
        <CheckBox Content="Egg" IsChecked="True" Margin="0,180,0,0"/>
    </Grid>
</UserControl>
