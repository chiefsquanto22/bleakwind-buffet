<UserControl x:Class="PointOfSale.SideCustom"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <StackPanel>
            <RadioButton Content="Small" IsChecked="{Binding Path=Size}"/>
            <RadioButton Content="Medium" IsChecked="{Binding Path=Size}"/>
            <RadioButton Content="Large" IsChecked="{Binding Path=Size}"/>
        </StackPanel>
    </Grid>
</UserControl>
