<UserControl x:Class="PointOfSale.OrderComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Name="addItem" Content="Add Item" Click="AddItemToOrder"  Grid.Row="1" Height="100" Width="100" HorizontalAlignment="Left"/>
        <Button Name="modifyItem" Content="Modify Item" Click="ModifyItem" Grid.Row="1" Height="100" Width="100" HorizontalAlignment="Center"/>
        <Button Name="removeItem" Content="Remove Item" Click="RemoveItem" Grid.Row="1" Height="100" Width="100" HorizontalAlignment="Right"/>
        <ListBox Name="totalOrder" Grid.Column="1" Background="White"/>
        <TextBlock Name="priceBox" Grid.Column="1" Grid.Row="1" Background="White"/>
        <Border Name="containerBorder"/>
    </Grid>
</UserControl>
